{
    "name": "olivierb29/mobilecms-api-slim",
    "description": "MobileCMS API with Slim",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Olivier Boniteau",
            "email": "olivier_boniteau@yahoo.fr",
            "homepage": "https://github.com/OlivierB29/"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "phpmailer/phpmailer": "^6.2",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.8.1",
        "tuupola/slim-jwt-auth": "^3.5.1"
 
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^0.12.90",
        "php-coveralls/php-coveralls": "^2.2.0",
        "phpunit/phpunit": "^9"

    },
 "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8888 -t public-dev",
        "test": "phpunit",
        "dist": "rm -rf vendor dist && php ~/bin/composer.phar install --no-dev && mkdir dist && cp -R public app src vendor dist"
    }
}
